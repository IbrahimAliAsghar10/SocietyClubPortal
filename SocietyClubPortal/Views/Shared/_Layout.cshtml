<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>

<body>
    <style>
        form {
            margin-top: 30px;
            transition: all 4s ease-in-out;
            margin-left: 50px;
            padding-right: 10px;
            align-content: center;
        }

        .form-control {
            width: 600px;
            background: transparent;
            border: none;
            outline: none;
            border: 2px solid darkblue;
            color: black;
            border-radius: 7px;
            font-size: 18px;
            margin-bottom: 16px;
            transition: 0.3s;
            padding: 7px 10px;
        }

            .form-control:hover {
                border-color: darkslategrey;
                transform: scale(1.02);
            }

        .submit {
            width: 600px;
            background: transparent;
            background: darkblue;
            color: #fff;
            font-size: 18px;
            margin-bottom: 16px;
            transition: 0.5s;
            padding: 7px 10px;
            cursor: pointer;
        }

            .submit:hover {
                transform: scale(1.02);
                background: darkgreen;
            }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: none;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Society Club Portal", "Home", "About Us", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a> Hello! @User.Identity.Name</a></li>
                        if (User.IsInRole("Admin"))
                        {
                            <li>
                                @Html.ActionLink("Home", "Home", "Administrator")
                            </li>
                        }
                        else if (User.IsInRole("Society"))
                        {
                            <li>
                                @Html.ActionLink("Home", "Home", "Society")
                            </li>
                            <li>
                                @Html.ActionLink("Events", "Events", "Society")
                            </li>
                            <li>
                                @Html.ActionLink("Inductions", "Inductions", "Society")
                            </li>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <li>
                                @Html.ActionLink("Home", "Home", "Student")
                            </li>
                            <li>
                                @Html.ActionLink("Societies", "View_Society", "Student")
                            </li>
                            <li>
                                @Html.ActionLink("Events", "View_All_Events", "Student")
                            </li>
                        }
                        <li>
                            @Html.ActionLink("Logout", "LogOut", "Login")
                        </li>

                    }

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>@DateTime.Now.Year - FAST SOCIETY CLUB PORTAL</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>