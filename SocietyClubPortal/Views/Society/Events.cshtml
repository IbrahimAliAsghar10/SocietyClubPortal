@using  SocietyClubPortal.Models

@model EventVM

@{
    ViewBag.Title = "Events";
}

<h2>Events</h2>
<br />
<br />
<div div class="form-group">
    @Html.ActionLink("Add new Event", "AddEvent", "Society", null, new { @class = "btn btn-primary" })
</div>
<br />
@if (!Model.NonSchedule_VM.Any() && !Model.Schedule_VM.Any())
{
    <h2>You don't have any events yet</h2>
}
else
{
    if (!Model.Schedule_VM.Any())
    {
        <h2>You don't have any scheduled events yet</h2>
    }
    else
    {
        <h3>YOUR SCHEDULED EVENTS</h3>
        <table class="table">
            <tr>
                <th>
                    EVENT NAME
                </th>
                <th>
                    EVENT_DESCRIPTION
                </th>
                <th>
                    VENUE
                </th>
                <th>
                    DATE
                </th>
                <th>
                    START TIME
                </th>
                <th>
                    END TIME
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Schedule_VM)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EVENT_NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EVENT.DESCRIPTION)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VENUE.NAME)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DATED)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.START_TIME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.END_TIME)
                    </td>
                    <td>

                        @Html.ActionLink("Delete", "delete_event", "Society", new { ename = item.EVENT_NAME }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }

        </table>
        <br />
        <hr />
        <br />
        <br />

    }

    if (!Model.NonSchedule_VM.Any())
    {
        <h2>You don't have any non-scheduled events yet</h2>
    }
    else
    {
        <h3>YOUR NON-SCHEDULED EVENTS</h3>
        <table class="table">
            <tr>
                <th>
                    E_NAME
                </th>
                <th>
                    EVENT_DESCRIPTION
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model.NonSchedule_VM)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DESCRIPTION)
                    </td>
                    <td>

                        @Html.ActionLink("Schedule", "Schedule", "Society", new { ename = item.NAME }, new { @class = "btn btn-primary" })
                    </td>
                    <td>

                        @Html.ActionLink("Delete", "delete_event", "Society", new { ename = item.NAME }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }

        </table>
    }

}